# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://app.ordernimbus.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# AWS Configuration
AWS_REGION=us-west-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:8000  # For local development with DynamoDB Local
USERS_TABLE=ordernimbus-users
FORECASTS_TABLE=ordernimbus-forecasts
DATA_TABLE=ordernimbus-data
UPLOADS_TABLE=ordernimbus-uploads

# AWS Cognito Configuration
USE_COGNITO=false  # Set to true to use AWS Cognito
COGNITO_USER_POOL_ID=us-west-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxx

# Frontend Configuration
SERVE_FRONTEND=false  # Set to true to serve React frontend from Express

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Email Configuration (for password reset)
EMAIL_FROM=noreply@ordernimbus.com
EMAIL_REPLY_TO=support@ordernimbus.com

# Feature Flags
ENABLE_SWAGGER_UI=true
ENABLE_REQUEST_LOGGING=true
REQUIRE_DB=false  # Set to true to require database for health checks