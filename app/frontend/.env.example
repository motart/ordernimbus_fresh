# Frontend Environment Variables
# Copy this file to .env.development.local and fill in your values

# API Configuration
REACT_APP_API_URL=http://127.0.0.1:3001

# Shopify Development Token (for local development only)
# Get this from your Shopify dev store's Custom App settings
# Format: shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# NEVER commit real tokens to git!
REACT_APP_DEV_SHOPIFY_TOKEN=

# AWS Cognito Configuration (for local development)
REACT_APP_USER_POOL_ID=local-user-pool
REACT_APP_CLIENT_ID=local-client-id
REACT_APP_REGION=us-west-1

# Feature Flags
REACT_APP_ENVIRONMENT=local
REACT_APP_ENABLE_DATA_UPLOAD=true
REACT_APP_ENABLE_CHATBOT=true
REACT_APP_ENABLE_PASSWORD_RESET=true