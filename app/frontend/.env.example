# OrderNimbus Environment Configuration
# Copy this file to .env.local for local development
# Copy this file to .env.production for production builds

# Application URLs
REACT_APP_APP_URL=https://app.ordernimbus.com
REACT_APP_API_URL=https://api.ordernimbus.com

# AWS Cognito Configuration
REACT_APP_USER_POOL_ID=us-west-1_YourPoolId
REACT_APP_CLIENT_ID=YourClientId
REACT_APP_REGION=us-west-1

# Environment
REACT_APP_ENVIRONMENT=production

# Optional: GraphQL endpoint (if different from REST API)
REACT_APP_GRAPHQL_URL=https://api.ordernimbus.com/graphql

# Optional: WebSocket endpoint for real-time features
REACT_APP_WS_URL=wss://api.ordernimbus.com/ws

# Feature Flags
REACT_APP_ENABLE_DEBUG=false
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_MOCK_DATA=false