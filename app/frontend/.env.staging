# Staging environment variables for OrderNimbus
# These values are used for staging deployments

# API Configuration - Current staging uses S3 static hosting
# For now, point to localhost for development, update when staging API is deployed
REACT_APP_API_URL=http://127.0.0.1:3001
REACT_APP_ENVIRONMENT=staging

# AWS Cognito Configuration
REACT_APP_USER_POOL_ID=to-be-configured
REACT_APP_CLIENT_ID=to-be-configured
REACT_APP_REGION=us-west-1

# Shopify Configuration 
# API Key is stored securely in AWS Parameter Store and retrieved by backend
REACT_APP_SHOPIFY_REDIRECT_URI=http://localhost:3001/api/shopify/callback

# Feature Flags
REACT_APP_ENABLE_DATA_UPLOAD=true
REACT_APP_ENABLE_CHATBOT=true
REACT_APP_ENABLE_PASSWORD_RESET=true
REACT_APP_ENABLE_DEBUG_LOGS=true
REACT_APP_MOCK_SHOPIFY_DATA=false
REACT_APP_USE_WEB_CRYPTO=false

# Analytics and Monitoring
REACT_APP_ANALYTICS_ENABLED=false

# Development token for testing
REACT_APP_DEV_SHOPIFY_TOKEN=
