# Local Development Environment Configuration
# Copy this to .env.local and customize for your local setup

# Application URLs
REACT_APP_APP_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:3001

# AWS Cognito Configuration (use local or dev pool)
REACT_APP_USER_POOL_ID=local-pool-id
REACT_APP_CLIENT_ID=local-client-id
REACT_APP_REGION=us-west-1

# Environment
REACT_APP_ENVIRONMENT=development

# GraphQL endpoint for backend data
REACT_APP_GRAPHQL_URL=http://localhost:3001/graphql

# WebSocket endpoint for real-time features
REACT_APP_WS_URL=ws://localhost:3001/ws

# Shopify OAuth redirect
REACT_APP_SHOPIFY_REDIRECT_URI=http://localhost:3001/api/shopify/callback

# Feature Flags
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_MOCK_DATA=true