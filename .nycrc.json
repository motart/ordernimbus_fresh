{
  "all": true,
  "include": [
    "lambda/**/*.js",
    "app/backend/**/*.js",
    "app/frontend/src/**/*.js",
    "app/frontend/src/**/*.jsx",
    "app/frontend/src/**/*.ts",
    "app/frontend/src/**/*.tsx"
  ],
  "exclude": [
    "**/*.test.js",
    "**/*.spec.js",
    "**/tests/**",
    "**/node_modules/**",
    "**/coverage/**",
    "**/build/**",
    "**/dist/**",
    "**/.next/**"
  ],
  "reporter": [
    "html",
    "text",
    "lcov",
    "json-summary"
  ],
  "report-dir": "./coverage",
  "temp-dir": "./.nyc_output",
  "check-coverage": true,
  "statements": 80,
  "branches": 75,
  "functions": 80,
  "lines": 80,
  "watermarks": {
    "statements": [60, 80],
    "branches": [60, 75],
    "functions": [60, 80],
    "lines": [60, 80]
  }
}