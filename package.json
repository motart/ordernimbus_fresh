{
  "name": "sales-forecasting-platform",
  "version": "1.0.0",
  "description": "Multi-tenant, highly-scalable Sales Forecasting Platform with AWS-native infrastructure",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "deploy": "./scripts/deployment/deploy.sh",
    "deploy:staging": "./scripts/deployment/deploy.sh staging us-west-1",
    "deploy:production": "./scripts/deployment/deploy.sh production us-west-1",
    "deploy:dev": "./scripts/deployment/deploy.sh dev us-west-1 true",
    "deploy:safe": "./scripts/deployment/deploy-with-rollback.sh",
    "deploy:safe:staging": "./scripts/deployment/deploy-with-rollback.sh staging us-west-1",
    "deploy:safe:production": "./scripts/deployment/deploy-with-rollback.sh production us-west-1",
    "deploy:safe:dev": "./scripts/deployment/deploy-with-rollback.sh dev us-west-1 true",
    "cdk:bootstrap": "npx cdk bootstrap",
    "cdk:deploy": "npx cdk deploy --all --require-approval never",
    "cdk:destroy": "npx cdk destroy --all --force",
    "cdk:diff": "npx cdk diff",
    "cdk:synth": "npx cdk synth",
    "test": "mocha 'tests/unit/**/*.test.js' --timeout 10000",
    "test:unit": "mocha 'tests/unit/**/*.test.js' --timeout 10000",
    "test:e2e": "mocha 'tests/e2e/**/*.test.js' --timeout 60000",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:uc001": "mocha 'tests/**/*UC001*.test.js' --timeout 60000",
    "test:watch": "mocha 'tests/unit/**/*.test.js' --watch",
    "test:load": "k6 run tests/load/k6-suite.js",
    "test:load:staging": "k6 run tests/load/k6-suite.js --env API_BASE_URL=https://api-staging.ordernimbus.com",
    "deploy:with-tests": "npm run test:all && npm run deploy",
    "deploy:production:safe": "npm run test:all && npm run deploy:production",
    "setup:selenium": "node scripts/setup-selenium.js",
    "monitor:cloudwatch": "aws cloudwatch get-metric-statistics --namespace AWS/ECS --metric-name CPUUtilization --start-time $(date -u -d '1 hour ago' +%Y-%m-%dT%H:%M:%S) --end-time $(date -u +%Y-%m-%dT%H:%M:%S) --period 300 --statistics Average",
    "costs:analyze": "aws ce get-cost-and-usage --time-period Start=$(date -d '1 month ago' +%Y-%m-%d),End=$(date +%Y-%m-%d) --granularity MONTHLY --metrics BlendedCost",
    "logs:api": "aws logs tail /aws/ecs/ordernimbus-api --follow",
    "logs:ml": "aws logs tail /aws/mwaa/ordernimbus-airflow --follow",
    "rollback:verify": "./scripts/utilities/rollback-verify.sh",
    "rollback:verify:staging": "./scripts/utilities/rollback-verify.sh staging us-west-1",
    "rollback:verify:production": "./scripts/utilities/rollback-verify.sh production us-west-1",
    "dev": "nodemon local-test-server.js",
    "dev:frontend": "cd app/frontend && npm start",
    "start:local": "./start-local-env.sh",
    "stop:local": "./stop-local-env.sh",
    "pr": "./scripts/auto-pr.sh",
    "pr:create": "./scripts/auto-pr.sh",
    "pr:status": "gh pr checks",
    "pr:view": "gh pr view --web"
  },
  "keywords": [
    "sales-forecasting",
    "aws",
    "cdk",
    "multi-tenant",
    "machine-learning",
    "scalability"
  ],
  "author": "OrderNimbus Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "aws-cdk": "^2.100.0",
    "body-parser": "^2.2.0",
    "chai": "^4.3.7",
    "chromedriver": "^114.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "geckodriver": "^3.2.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.10",
    "proxyquire": "^2.1.3",
    "selenium-webdriver": "^4.11.1",
    "sinon": "^15.2.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.100.0",
    "aws-sdk": "^2.1400.0",
    "axios": "^1.11.0",
    "constructs": "^10.0.0",
    "dotenv": "^17.2.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ordernimbus/sales-forecasting-platform.git"
  },
  "bugs": {
    "url": "https://github.com/ordernimbus/sales-forecasting-platform/issues"
  },
  "homepage": "https://github.com/ordernimbus/sales-forecasting-platform#readme"
}
